<UserControl x:Class="PointOfSale.OrderSummary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <Grid>
        <Border BorderThickness="2" BorderBrush="Black" CornerRadius="5" Padding="0,4,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Border BorderThickness="0,0,0,1" BorderBrush="Black" Padding="3,0,0,0">
                    <TextBlock FontSize="15" FontWeight="Bold" TextAlignment="Center">
                        Order:
                    </TextBlock>
                </Border>
                <Button Grid.Row="3" FontSize="15" >
                    Remove Item
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
